<li class="flex {% if 'TextRight' == doctor.data.direction %}flex-row-reverse{% endif %} flex-wrap items-center h-auto max-w-4xl mx-auto my-32 lg:my-16 lg:mt-24">

  <!--Main Col-->
  <div id="profile-{{ doctor.data.name | slug }}" class="w-full mx-6 bg-white rounded-lg shadow-2xl opacity-75 lg:w-3/5
  {% if 'TextLeft' == doctor.data.direction %}
  lg:rounded-l-lg lg:rounded-r-none{% else %}lg:rounded-r-lg lg:rounded-l-none{% endif %}  lg:mx-0">

    <div class="p-6 md:p-12 lg:text-left">
      <!-- Image for mobile view-->

      <div class="block w-48 h-48 mx-auto -mt-32 bg-center bg-cover border-4 rounded-full shadow-xl border-metal-600 lg:hidden" style="background-image: url({{ doctor.data.avatar }})"></div>

      <h1 class="mt-6 text-3xl font-bold text-center md:m-0 md:text-left lg:pt-0">
        {{ doctor.data.name }}
      </h1>
      <div class="w-4/5 pt-1 mx-auto border-b-2 border-redbrown-200 lg:mx-0"></div>

      <div class="pt-4 text-base">
        {{ doctor.templateContent | safe }}
      </div>

      <ul role="list" class="pt-4 text-base">
        {% for listitem in doctor.data.listextra %}
          <li class="flex items-center gap-2 text-base">
            <svg viewBox="0 0 58 58" focusable="false" class="w-4 h-4 text-redbrown-500" role="presentation"><path fill="currentColor" d="M28.9999 0.562988C13.3196 0.562988 0.562378 13.3202 0.562378 29.0005C0.562378 44.6808 13.3196 57.438 28.9999 57.438C44.6801 57.438 57.4374 44.6808 57.4374 29.0005C57.4374 13.3202 44.6801 0.562988 28.9999 0.562988ZM39.2223 30.272L23.5749 39.7247C23.3506 39.8591 23.0946 39.9314 22.8332 39.9342C22.5717 39.9369 22.3142 39.8701 22.0871 39.7406C21.86 39.611 21.6715 39.4234 21.5408 39.1969C21.4102 38.9705 21.3421 38.7133 21.3436 38.4519V19.5491C21.3421 19.2877 21.4102 19.0305 21.5408 18.8041C21.6715 18.5776 21.86 18.3899 22.0871 18.2604C22.3142 18.1308 22.5717 18.064 22.8332 18.0668C23.0946 18.0696 23.3506 18.1419 23.5749 18.2763L39.2223 27.729C39.4404 27.8619 39.6207 28.0486 39.7458 28.2713C39.8709 28.494 39.9366 28.7451 39.9366 29.0005C39.9366 29.2559 39.8709 29.507 39.7458 29.7297C39.6207 29.9523 39.4404 30.1391 39.2223 30.272Z"></path></svg>
            {{ listitem.listitem }}</li>
        {% endfor %}
      </ul>

    </div>

  </div>

  <!--Img Col-->
  <div class="w-full lg:w-2/5">
    <!-- Big profile image for side bar (desktop) -->
    <img src="{{ doctor.data.thumbnail }}" class="hidden rounded-none shadow-2xl lg:rounded-lg lg:block" alt="{{ doctor.data.name }}">
  </div>


  <div class="mx-auto my-8 text-center md:w-3/5">
    <h1 class="flex-1 mr-8 text-2xl text-brown-500">Spreekuren {{ doctor.data.name }}</h1>
    <div class="overflow-hidden border-b border-gray-200 rounded-lg shadow">

      {% if 'Ben' in doctor.data.name %}{% include './cal_ben.html' %}{% endif %}

      {% if 'Tina' in doctor.data.name %}{% include './cal_tina.html' %}{% endif %}

      {% if 'Fleur' in doctor.data.name %}{% include './cal_fleur.html' %}{% endif %}

    </div>
  </div>

</li>